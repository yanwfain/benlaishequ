
.top_dv{
  width: 100%;
  padding-top: 20rpx;
  background: #F9F7F5;
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.tab_top{
  width: 50%;
  height: 90rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 90rpx;


}
.active{
  color: white;
  background: #BA9A60;
  
}
.list-dv{
  width: 94%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  border-top: 1px solid #CFCFCF;
}
.list_cont{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  position: relative;
}
.optyis{
  position: absolute;
  width: 70%;
  height: 100%;
  left: 30%;
  top:0;
  z-index: 2;
}
.left{
  color: #666666;
  display: flex;
  align-items: center;

}
.right{
  display: flex;
  align-items: center;
  color: #1F1F1F;
}
.triangle-down {
  height:0;
  border-left:4px solid transparent;
  border-right:4px solid transparent;
  border-top:6px solid #888888;
  margin-left:14rpx;
}
.inpright{
  text-align: right;
}
.txtarea{
  width:90%;
  margin: 0 auto;
  padding: 20rpx;
  background: #FAFAFA;
  border: 1px solid #CFCFCF;
}
.border{
  width: 100%;
  height: 24rpx;
  background: #F9F7F5;

}
.txt_bitom{
  width: 94%;
  margin: 0 auto;
  padding: 30rpx 0;

}
.tit1{
  font-size: 32rpx;
  font-weight: 600;
  padding-bottom: 10rpx;

}
.txt_txt{
  font-size: 28rpx;
  color: #666666;

}
.btn_submit{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #B38F51;
  color: white;
}