.list{
  padding: 30rpx 0;
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  border-bottom: 1px solid #CFCFCF;

}
.left{
  width: 30%;

}
.inp{
  width: 68%;
  text-align: right;
}
.triangle-down {
  height:0;
  border-left:4px solid transparent;
  border-right:4px solid transparent;
  border-top:6px solid #888888;
  margin-left:14rpx;
}
.picker{
  /* width: 68%; */
  display: flex;
  text-align: right;
  align-items: center;
  color: rgb(128, 127, 127);
}
.cont{
  width: 90%;
  margin: 0 auto;
  height: 350rpx;
  background: #FAFAFA;
  border: 1px solid #CFCFCF;
  /* margin-top: 20rpx; */
}
textarea{
  padding: 20rpx;
  height: 350rpx;
  font-size: 28rpx;
}
.submit{
  width: 100%;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  font-size: 30rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  color: white;
  background: linear-gradient(to right, #C3A874 0%,#B38F51 100%);
}