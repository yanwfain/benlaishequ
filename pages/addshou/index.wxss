/* pages/addzu/index.wxss */
.txt_top{
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: red;
}
.list-dv{
  width: 94%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  border-top: 1px solid #CFCFCF;
}
.list_cont{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  position: relative;
}
.optyis{
  position: absolute;
  width: 70%;
  height: 100%;
  left: 30%;
  top:0;
  z-index: 2;
}
.left{
  color: #666666;
  display: flex;
  align-items: center;

}
.right{
  display: flex;
  align-items: center;
  color: #1F1F1F;
}
.triangle-down {
  height:0;
  border-left:4px solid transparent;
  border-right:4px solid transparent;
  border-top:6px solid #888888;
  margin-left:14rpx;
}
.inpright{
  text-align: right;
  width: 72%;
}
.txtarea{
  width:90%;
  margin: 0 auto;
  padding: 20rpx;
  background: #FAFAFA;
  border: 1px solid #CFCFCF;
}
.pages {
  width: 98%;
  margin: auto;
  overflow: hidden;
}

.top {
  width: 100%;
  overflow: hidden;
  margin: auto;
  font-size: 50rpx;
  background-color: white;
  border-left: 8rpx solid rgb(9, 245, 60);
  border-bottom: 1rpx solid rgba(117, 116, 116, 0.527);
}

.top_name {
  margin-left: 20rpx;
}

/* 图片 */

.images_box {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
}

.img-box {
  border: 5rpx;
  /* border-style: solid;
  border-color: rgba(0, 0, 0, 0.452); */
  width: 234rpx;
  height: 214rpx;
  margin-left: 35rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

/* 删除图片 */

.img-delect {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}

.img {
  width: 100%;
  height: 100%;
}

.jiage {
  height: 60rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  background-color: white;
  display: flex;
  justify-content: flex-start;
}

.rmb {
  width: 280rpx;
  border: 2rpx solid rgb(199, 197, 197);
}
.titl_an {
  width: 90%;
  margin: 0 auto;
  padding: 10rpx 0;
  font-size: 34rpx;
  font-weight: 600;
}
.btn_sub{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  font-size: 28rpx;
  height: 110rpx;
  line-height: 110rpx;
  color: white;
  text-align: center;
  background: linear-gradient(to right, #C3A874 0%,#B38F51 100%);
}