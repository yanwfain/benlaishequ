/* pages/guanli/index.wxss */
.user_top{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.user_head{
  width: 150rpx;
  height: 150rpx;
  border-radius:100%;
}
.user_name{
  font-weight: 600;
  font-size: 34rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.type{
  width: 280rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to right, #E3D3AC 0%,#C3A874 100%);
  padding: 6rpx 0;
  margin: 0 auto;
  border-radius: 60rpx;
  margin-top: 20rpx;
}
.type image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 14rpx;
}
.add_list{
  width: 90%;
  margin: 0 auto;
  padding: 30rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #B7B7B7;
}
.bordd{
  width: 100%;
  height: 26rpx;
  background: #F9F7F5;

}
.tab_list{
  width: 86%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  margin-top:50rpx;
}
.tab_dv{
  width: 22%;
  margin:8% 1%;
  text-align: center;
  font-size: 30rpx;

}
.tab_dv image{
  width: 84rpx;
  height:84rpx;
  margin-bottom: 14rpx;
}